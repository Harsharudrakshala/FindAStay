<% layout("/layouts/boilerplate") -%>
<form id="filter-form" class="d-flex mb-4">
  <div class="form-group flex-grow-1 mr-2">
    <label for="type" class="sr-only">Type:</label>
    <select class="form-control" id="type" name="type">
      <option value="">All</option>
      <option value="room">Room</option>
      <option value="house">House</option>
      <option value="apartment">Apartment</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary" style="margin-left: 10px">
    Filter
  </button>
</form>
<!-- <h3>All Places</h3> -->
<!-- <form method="GET" action="/places/new">
        <button>Create New Place</button>
    </form> -->
<div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1">
  <% for(let place of allPlaces){%>

  <div class="card place-card home-pla">
    <a href="/places/<%=place._id%>"
      ><img
        src="<%=place.image.url%>"
        class="card-img-top home-img"
        alt="place_image"
        style="height: 18rem"
    /></a>
    <div class="card-body">
      <h5 class="card-title"><%=place.title%></h5>
      <p class="card-text">
        Price : <%=place.price.toLocaleString("en-IN")%> / night
      </p>
      <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
    </div>
  </div>
  <%}%>
</div>
